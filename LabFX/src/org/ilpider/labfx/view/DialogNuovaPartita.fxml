<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ilpider.labfx.view.ControllerDialogNuovaPartita">
   <bottom>
      <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="idOK" mnemonicParsing="false" onAction="#doOK" text="OK" BorderPane.alignment="CENTER" />
            <Button fx:id="idAnnulla" mnemonicParsing="false" onAction="#doAnnulla" text="Annulla" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="TOP_CENTER" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Seleziona il nomero dei Giocatori" />
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <RadioButton fx:id="rdb2" mnemonicParsing="false" onAction="#doBtnNumero" selected="true" text="2">
                     <toggleGroup>
                        <ToggleGroup fx:id="grpRdbNumeroGiocatori" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rdb3" mnemonicParsing="false" onAction="#doBtnNumero" text="3" toggleGroup="$grpRdbNumeroGiocatori" />
                  <RadioButton fx:id="rdb4" mnemonicParsing="false" onAction="#doBtnNumero" text="4" toggleGroup="$grpRdbNumeroGiocatori" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" />
          <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="NEVER" />
          <RowConstraints vgrow="NEVER" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        </rowConstraints>
         <children>
            <Label text="Inserisci i nomi:" />
            <TextField fx:id="txtNomeGiocatore1" onAction="#doActionTxtNome" promptText="Nome giocatore 1" GridPane.rowIndex="1" />
            <TextField fx:id="txtNomeGiocatore2" onAction="#doActionTxtNome" promptText="Nome giocatore 2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtNomeGiocatore3" onAction="#doActionTxtNome" promptText="Nome giocatore 3" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="txtNomeGiocatore4" onAction="#doActionTxtNome" promptText="Nome giocatore 4" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
   </center>
</BorderPane>
